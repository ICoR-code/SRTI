{
  "name": "SRTI-v2-Manager-GUI",
  "version": "1.00.02",
  "license": "CC0-1.0",
  "description": "A GUI application to help run a local SRTI simulator system.",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "dev": "electron . --debug",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "win": {
      "target": "portable",
      "icon": "srti_modules/srti_logo/srti_logo_dark_512_icon.ico",
      "extraResources": [
        "./extraResources/**"
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "srti_modules/srti_logo/srti_logo_dark_512_icon.icns",
      "extraResources": [
        "**/extraResources/**"
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "srti_modules/srti_logo/srti_logo_dark_512_icon.icns",
      "extraResources": [
        "**/extraResources/**"
      ]
    }
  },
  "dependencies": {
    "npm": "^6.14.6",
    "semantic-ui": "^2.4.2",
    "tree-kill": "^1.2.1"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^6.1.7",
    "electron-builder": "^21.2.0"
  }
}
